    <!-- Propeller Ads Script -->
<script src='//whephiwums.com/vignette.min.js' data-zone='8958851' data-sdk='show_8958851'></script> 

    <script>
        let adsWatched = 0;
        let earnedPoints = 0;

        function watchAd() {
            adsWatched++;
            earnedPoints += 0.15;
            document.getElementById("watched-ads").innerText = adsWatched;
            document.getElementById("earned-points").innerText = earnedPoints.toFixed(2);
            alert("Ad Watched! You earned 0.15 Taka.");
        }

        function joinCommunity() {
            window.location.href = "https://t.me/monetagy";
        }

        function withdraw() {
            if (earnedPoints < 50) {
                alert("Minimum withdrawal is 50 Taka.");
                return;
            }
            alert("Withdrawal request sent!");
            earnedPoints = 0;
            document.getElementById("earned-points").innerText = earnedPoints.toFixed(2);
        }
    </script>
